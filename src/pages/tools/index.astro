---
import PageLayout from '@/layouts/BaseLayout.astro'
import ToolSection from '@/components/ToolSection.astro'
import Button from '@/components/Button.astro'

const DESIGN = [
	{
		name: 'Figma',
		description: 'Interface design and prototyping tool used for web and UI/UX layouts.',
		href: 'https://www.figma.com/',
		iconPath: 'figma',
		iconBgColour: '#1E1E1E',
	},
	{
		name: 'Adobe Photoshop',
		description: 'For image adjustments, mockups, and asset preparation.',
		href: 'https://www.adobe.com/products/photoshop.html',
		iconPath: 'photoshop',
		iconBgColour: '#001E36',
	},
]

const PRODUCTIVITY = [
	{
		name: 'Arc',
		description: 'Browser',
		href: 'https://arc.net/',
		iconPath: 'arc',
		iconBgColour: '#414350'
	},
	{
		name: 'ClickUp',
		description: 'Project management and sprint planning tool.',
		href: 'https://clickup.com/',
		iconPath: 'clickup',
		iconBgColour: '#7B68EE',
	},
	{
		name: 'Slack',
		description: 'Team communication and collaboration.',
		href: 'https://slack.com/',
		iconPath: 'slack',
		iconBgColour: '#611F69',
	},
	{
		name: 'Notion',
		description: 'Documentation, notes, and team knowledge base.',
		href: 'https://www.notion.so/product',
		iconPath: 'notion',
		iconBgColour: '#EFEFEE',
	}
]

const DEVELOPMENT = [
	{
		name: 'VS Code',
		description: 'Primary IDE for frontend and WordPress development.',
		href: 'https://code.visualstudio.com/',
		iconPath: 'vscode',
		iconBgColour: '#007ACC',
	},
	{
		name: 'Cursor',
		description: 'AI-assisted code editor for faster iteration and refactors.',
		href: 'https://cursor.sh/',
		iconPath: 'cursor',
		iconBgColour: '#1E1E1E',
	},
	{
		name: 'GitKraken',
		description: 'Visual Git client for repo management and branching.',
		href: 'https://www.gitkraken.com/',
		iconPath: 'gitkraken',
		iconBgColour: '#0E6E68',
	},
	{
		name: 'GitHub',
		description: 'Code hosting, version control, and CI/CD pipelines.',
		href: 'https://github.com/',
		iconPath: 'github',
		iconBgColour: '#181717',
	},
	{
		name: 'FileZilla',
		description: 'FTP client for quick file transfer and deployment.',
		href: 'https://filezilla-project.org/',
		iconPath: 'filezilla',
		iconBgColour: '#C60000',
	},
]

const UTILITIES = [
	{
		name: 'ChatGPT',
		description: 'AI assistant for brainstorming, documentation, and code help.',
		href: 'https://chat.openai.com/',
		iconPath: 'chatgpt',
		iconBgColour: '#74AA9C',
	},
	{
		name: 'Buddy',
		description: 'CI/CD tool for automated WordPress and frontend deployments.',
		href: 'https://buddy.works/',
		iconPath: 'buddy',
		iconBgColour: '#0080FF',
	},
];
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='w-full'>
		<Button title='Back' href='/' style='button'>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				width='14'
				height='14'
				viewBox='0 0 24 24'
				slot='icon-before'
			>
				<path
					fill='currentColor'
					d='m6.921 12.5l5.792 5.792L12 19l-7-7l7-7l.713.708L6.921 11.5H19v1z'
				>
				</path>
			</svg>
		</Button>

		<div class='mt-5 flex w-full flex-col gap-y-10'>
			<div>
				<h1 class='mb-1 text-2xl font-bold'>Tools</h1>
				<p>Tools and software I use daily</p>
			</div>

			<ToolSection title='Design' tools={DESIGN} />
			<ToolSection title='Productivity' tools={PRODUCTIVITY} />
			<ToolSection title='Development' tools={DEVELOPMENT} />
			<ToolSection title='Utilities' tools={UTILITIES} />
		</div>
	</div>
</PageLayout>
